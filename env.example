# Django Configuration
SECRET_KEY=django-insecure-change-this-in-production-12345678901234567890
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database Configuration
DB_NAME=omnichannel_crm
DB_USER=crm_user
DB_PASSWORD=crm_password
DB_ROOT_PASSWORD=root_password
DB_HOST=db
DB_PORT=3306

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# HTTPS and Domain Configuration
DOMAIN=yourdomain.com
CUSTOM_DOMAIN=yourdomain.com  # Use this if you have a different domain for certificates
HTTPS_PORT=443
HTTP_PORT=80

# SSL Certificate Configuration
# Option 1: Use generated self-signed certificates (development)
SSL_CERT=crm.crt
SSL_KEY=crm.key

# Option 2: Use your own certificates (production)
# SSL_CERT=custom.crt
# SSL_KEY=custom.key
# SSL_CERT_PATH=/path/to/your/certificate.crt
# SSL_KEY_PATH=/path/to/your/private.key

# Security Settings (set to True in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Telegram API (required for Telegram integration)
# Get these from https://my.telegram.org/auth
API_ID=your_api_id
API_HASH=your_api_hash

# Logging
DJANGO_LOG_LEVEL=INFO

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0